{
  "name": "custom.remote.python.thirdparty_dns",
  "version": "1.020",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "technologies": [
    "DNS"
  ],
  "metricGroup": "tech.DNS",
  "source": {
    "package": "dns_extension",
    "className": "DNSExtension",
    "install_requires": [
      "dnspython3",
      "dt>=1.1.58",
      "charset-normalizer<3"
    ],
    "activation": "Remote"
  },
  "properties": [
    {
      "key": "api_token",
      "type": "Password"
    },
    {
      "key": "test_name",
      "type": "String"
    },
    {
      "key": "dns_server",
      "type": "String"
    },
    {
      "key": "host",
      "type": "String"
    },
    {
      "key": "test_location",
      "type": "String"
    },
    {
      "key": "log_level",
      "type": "Dropdown",
      "dropdownValues": [
        "INFO",
        "DEBUG"
      ],
      "defaultValue": "INFO"
    },
    {
      "key": "frequency",
      "type": "String"
    },
    {
      "key": "proxy_address",
      "type": "String"
    },
    {
      "key": "proxy_username",
      "type": "String"
    },
    {
      "key": "proxy_password",
      "type": "Password"
    },
    {
      "key": "failure_count",
      "type": "Integer",
      "defaultValue": 1
    }
  ],
  "configUI": {
    "displayName": "DNS",
    "properties": [
      {
        "key": "api_token",
        "displayName": "API Token",
        "displayHint": "Requires \"Create and read synthetic monitors, locations, and nodes\" permission",
        "displayOrder": 20
      },
      {
        "key": "test_name",
        "displayName": "(Optional) Synthetic monitor name",
        "displayOrder": 30
      },
      {
        "key": "dns_server",
        "displayName": "DNS server",
        "displayHint": "IP address or hostname",
        "displayOrder": 40
      },
      {
        "key": "host",
        "displayName": "Test target host",
        "displayOrder": 50
      },
      {
        "key": "frequency",
        "displayName": "(Optional) Frequency",
        "displayHint": "Frequency in minutes, default: 15",
        "displayOrder": 60
      },
      {
        "key": "test_location",
        "displayName": "(Optional) Location name",
        "displayHint": "Default: ActiveGate",
        "displayOrder": 70
      },
      {
        "key": "proxy_address",
        "displayName": "(Optional) Proxy Address",
        "displayOrder": 80
      },
      {
        "key": "proxy_username",
        "displayName": "(Optional) Proxy Username",
        "displayOrder": 90
      },
      {
        "key": "proxy_password",
        "displayName": "(Optional) Proxy Password",
        "displayOrder": 100
      },
      {
        "key": "log_level",
        "displayName": "Log level",
        "displayOrder": 110
      },
      {
          "key":  "failure_count",
          "displayName":  "Failure count",
          "displayOrder":  120,
          "displayHint":  "Number of consecutive failures before reporting error"
      }
    ]
  },
  "metrics": [
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "dns_extension_tests",
        "unit": "Count",
        "displayname": "DNS Extension - Checks"
      }
    }
  ]
}
